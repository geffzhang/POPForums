<!DOCTYPE html>

<html>
<head>
    <title>@PopForums.Resources.PopForumsAdmin - @ViewBag.PageTitle</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/PopForums.js" type="text/javascript"></script>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/PopForums/Admin.css" rel="stylesheet" type="text/css" />
	@RenderSection("HeaderContent", required: false)
</head>
	<body>
		<div class="container">
			<div class="row">
				<h1>@PopForums.Resources.PopForumsAdmin</h1>
			</div>
			<div class="row">
				<div class="col-sm-3">
					<nav class="navbar navbar-default" role="navigation">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#MainNav">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div id="MainNav" class="collapse navbar-collapse">
							<ul class="nav navbar-collapse">
								<li>@Html.ActionLink(PopForums.Resources.ForumHome, "Index", PopForums.Controllers.ForumHomeController.Name)</li>
								<li class="divider"></li>
								<li>@Html.ActionLink(PopForums.Resources.GeneralSettings, "Index")</li>
								<li>@Html.ActionLink(PopForums.Resources.Categories, "Categories")</li>
								<li>@Html.ActionLink(PopForums.Resources.Forums, "Forums")</li>
								<li>@Html.ActionLink(PopForums.Resources.ForumPermisions, "ForumPermissions")</li>
								<li>@Html.ActionLink(PopForums.Resources.Email, "Email")</li>
								<li>@Html.ActionLink(PopForums.Resources.Search, "Search")</li>
								<li>@Html.ActionLink(PopForums.Resources.ExternalLogins, "ExternalLogins")</li>
								<li class="divider"></li>
								<li>@Html.ActionLink(PopForums.Resources.EditUser, "EditUserSearch")</li>
								<li>@Html.ActionLink(PopForums.Resources.UserRoles, "UserRoles")</li>
								<li>@Html.ActionLink(PopForums.Resources.UserImageApproval, "UserImageApprove")</li>
								<li>@Html.ActionLink(PopForums.Resources.EmailIpBan, "Ban")</li>
								<li>@Html.ActionLink(PopForums.Resources.EmailUsers, "EmailUsers")</li>
								<li class="divider"></li>
								<li>@Html.ActionLink(PopForums.Resources.ScoringGame, "ScoringGame")</li>
								<li>@Html.ActionLink(PopForums.Resources.EventDefinitions, "EventDefinitions")</li>
								<li>@Html.ActionLink(PopForums.Resources.AwardDefinitions, "AwardDefinitions")</li>
								<li>@Html.ActionLink(PopForums.Resources.ManualEvent, "ManualEvent")</li>
								<li class="divider"></li>
								<li>@Html.ActionLink(PopForums.Resources.IpHistory, "IPHistory")</li>
								<li>@Html.ActionLink(PopForums.Resources.SecurityLog, "SecurityLog")</li>
								<li>@Html.ActionLink(PopForums.Resources.ModerationLog, "ModerationLog")</li>
								<li>@Html.ActionLink(PopForums.Resources.ErrorLog, "ErrorLog")</li>
								<li>@Html.ActionLink(PopForums.Resources.Services, "Services")</li>
							</ul>
						</div>
					</nav>
				</div>
				<div class="col-sm-9">
					@if (ViewData["PostResult"] != null)
					{
						<p id="PostResult" class="bg-warning callout">@ViewData["PostResult"]</p>
					}
					@RenderBody()
				</div>
			</div>
			<div class="row">
				<p id="Copyright" class="small">&copy;@DateTime.Now.Year, POP World Media, LLC</p>
			</div>
		</div>
	</body>
</html>
